<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CounterActivity">

    <Button
        android:id="@+id/div100Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="90dp"
        android:text="/100"
        app:layout_constraintLeft_toRightOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/div10Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="50dp"
        android:text="/10"
        app:layout_constraintEnd_toStartOf="@+id/add100Btn"
        app:layout_constraintStart_toEndOf="@+id/add5Btn"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/div5Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginRight="90dp"
        android:text="/5"
        app:layout_constraintRight_toLeftOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/div3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="30dp"
        android:text="/3"
        app:layout_constraintLeft_toLeftOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/div2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginRight="30dp"
        android:text="/2"
        app:layout_constraintRight_toRightOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/mult100Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="90dp"
        android:text="x100"
        app:layout_constraintLeft_toRightOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/mult10Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="50dp"
        android:text="x10"
        app:layout_constraintEnd_toStartOf="@+id/add100Btn"
        app:layout_constraintStart_toEndOf="@+id/add5Btn"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/mult5Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginRight="90dp"
        android:text="x5"
        app:layout_constraintRight_toLeftOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/mult3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:text="x3"
        app:layout_constraintLeft_toLeftOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/mult2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginRight="30dp"
        android:text="x2"
        app:layout_constraintRight_toRightOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/sub100Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="90dp"
        android:text="-100"
        app:layout_constraintLeft_toRightOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/sub10Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="50dp"
        android:text="-10"
        app:layout_constraintEnd_toStartOf="@+id/add100Btn"
        app:layout_constraintStart_toEndOf="@+id/add5Btn"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/sub5Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginRight="90dp"
        android:text="-5"
        app:layout_constraintRight_toLeftOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/sub2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        android:text="-2"
        app:layout_constraintLeft_toLeftOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/sub1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginRight="30dp"
        android:text="-1"
        app:layout_constraintRight_toRightOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/add100Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="90dp"
        android:text="+100"
        app:layout_constraintLeft_toRightOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/add10Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:text="+10"
        app:layout_constraintEnd_toStartOf="@+id/add100Btn"
        app:layout_constraintStart_toEndOf="@+id/add5Btn"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/add5Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginRight="90dp"
        android:text="+5"
        app:layout_constraintRight_toLeftOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <Button
        android:id="@+id/add2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:text="+2"
        app:layout_constraintLeft_toLeftOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="650dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/add1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginRight="30dp"
        android:text="+1"
        app:layout_constraintRight_toRightOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/number" />

</androidx.constraintlayout.widget.ConstraintLayout>